{
  "settings": {
    "screenshots_enabled": true
  },
  "rules": [
    {
      "patterns": [
        ".*"
      ],
      "properties": {
        "context": "default",
        "uri": "turbo://fragment/web",
        "pull_to_refresh_enabled": true
      }
    },
    {
      "patterns": [
        "^$", "^/$", "^/profile$"
      ],
      "properties": {
        "uri": "turbo://fragment/web/tab",
        "presentation": "replace_root"
      }
    },
    {
      "patterns": [
        "^/login$", "^/sign_up$"
      ],
      "properties": {
        "context": "modal",
        "uri": "turbo://fragment/web/modal"
      }
    }
  ]
}